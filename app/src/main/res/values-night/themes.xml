<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitObserverApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#303F9F</item>
        <item name="colorPrimaryVariant">#1E1F22</item>
        <item name="colorOnPrimary">#DCDBDB</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/g_grey</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#DCDBDB</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1E1F22</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CHART_SCREENS">
        <item name="android:background">#4A4F6C</item>
    </style>
    <style name="SCREEN">
        <item name="android:background">#2C2F40</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">#ECECEC</item>
    </style>
    <style name="BUTTON">
        <item name="android:background">#06466A</item>
        <item name="android:textColor">#ECECEC</item>
    </style>
    <style name="EDIT">
        <item name="android:background">@drawable/custom_input_dark</item>
        <item name="android:textColor">#ECECEC</item>
    </style>
</resources>