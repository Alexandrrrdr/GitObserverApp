<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE57F"
    tools:context=".presentation.details.DetailsFragment">

    <TextView
        android:id="@+id/txtDetailsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/g_black"
        android:textStyle="bold"
        android:layout_margin="6dp"
        tools:text="Starred for some year"
        android:gravity="center_horizontal"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_amount"
        tools:text="Amount of users who starred it is: "
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/g_black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recView_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#FFE57F"
        android:padding="8dp" />

</LinearLayout>